{
  "name": "node-address-format",
  "version": "0.0.0",
  "description": "Outputs postal addresses in a variety of international formats",
  "main": "src/index.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "test": "mocha --reporter spec ./tests/test.js",
    "build": "npm run browserify && npm run uglify",
    "browserify": "./node_modules/browserify/bin/cmd.js src/index.js -o dist/index.js",
    "uglify": "./node_modules/uglify-js/bin/uglifyjs dist/index.js > dist/index.min.js"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/arcreative/node-address-format"
  },
  "author": "Adam Robertson",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/arcreative/node-address-format/issues"
  },
  "homepage": "https://github.com/arcreative/node-address-format",
  "devDependencies": {
    "mocha": "*",
    "uglify-js": "*",
    "browserify": "^4.1.11"
  }
}
